<h1><%= @job_listing.title %></h1>
<p><strong>Description:</strong> <%= @job_listing.description %></p>
<p><strong>Location:</strong> <%= @job_listing.location %></p>
<p><strong>Category:</strong> <%= @job_listing.category %></p>

<%= link_to 'Back', job_listings_path %> |
<%= link_to 'Edit', edit_job_listing_path(@job_listing) %> |
<%= link_to 'Delete', job_listing_path(@job_listing), method: :delete, data: { confirm: 'Are you sure?' } %>
