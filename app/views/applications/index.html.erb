<h1>Applications for <%= @job.title %></h1>

<%= link_to 'New Application', new_job_application_path(@job), class: 'btn btn-primary mb-3' %>

<% if @applications.any? %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th scope="col">Applicant Name</th>
        <th scope="col">Cover Letter</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @applications.each do |application| %>
        <tr>
          <td><%= application.applicant_name %></td>
          <td><%= application.cover_letter %></td>
          <td>
            <%= link_to 'Show', job_application_path(@job, application), class: 'btn btn-info' %> | 
            <%= link_to 'Edit', edit_job_application_path(@job, application), class: 'btn btn-warning' %> | 
            <%= link_to 'Delete', job_application_path(@job, application), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No applications found for this job.</p>
<% end %>
